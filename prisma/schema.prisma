generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usage {
  id         Int     @id @default(autoincrement())
  owner      String
  status     String
  costs      Float
  region     String
  stability  Float
  lastEdited DateTime
}

model OverviewData {
  id                Int     @id @default(autoincrement())
  date              DateTime
  rowsWritten       Int     @map("Rows written")
  rowsRead          Int     @map("Rows read")
  queries           Int
  paymentsCompleted Int     @map("Payments completed")
  signUps           Int     @map("Sign ups")
  logins            Int
  signOuts          Int     @map("Sign outs")
  supportCalls      Int     @map("Support calls")
}
